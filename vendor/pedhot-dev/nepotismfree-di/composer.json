{
    "name": "pedhot-dev/nepotismfree-di",
    "description": "A high-performance, opinionated, strict Dependency Injection Container for PHP 8.2+. No magic, no hidden wiring.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pedhot-Dev",
            "homepage": "https://github.com/Pedhot-Dev"
        }
    ],
    "support": {
        "source": "https://github.com/Pedhot-Dev/nepotismfree-di",
        "issues": "https://github.com/Pedhot-Dev/nepotismfree-di/issues"
    },
    "require": {
        "php": "^8.2",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "PedhotDev\\NepotismFree\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PedhotDev\\NepotismFree\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
